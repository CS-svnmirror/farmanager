ALLDIRS=align autowrap brackets compare drawline editcase \
 farcmds filecase helloworld hlfviewer macroview network \
 proclist multiarc tmppanel

all: libcrt $(ALLDIRS)

FICTIVE=_fictive_
$(FICTIVE):

libcrt: $(FICTIVE)
	@echo ===========CRT library
	@$(MAKE) -C common/CRT -f makefile_lib_gcc

$(ALLDIRS): $(FICTIVE)
	@echo ===========$@
	@$(MAKE) -C $@ -f makefile_gcc
