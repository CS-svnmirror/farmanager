ANSI = 1
USERCPP = -DWIN32 -DPCRE_STATIC -D_WIN32

include ../../unicode_far/makefile_gcc_common

include ../makefile_gcc_def_inc

DLLNAME = libPCRE.a
DLLFULLNAME = $(OBJDIR)/$(DLLNAME)
SRCS = get.c pcre.c study.c

OBJS = $(patsubst %.c,$(OBJDIR)/%.o,$(filter %.c,$(SRCS)))
DEPS = $(patsubst %.c,$(OBJDIR)/%.d,$(filter %.c,$(SRCS)))

all: $(DLLFULLNAME)

ifndef DISABLEAUTODEPS
ifeq ($(findstring clean,$(MAKECMDGOALS)),)
$(OBJDIR)/%.d: ./libpcre/%.c
	@echo making depends for $<
	@$(MKDIR) $(@D)
	@echo {gsub(/^^$(notdir $(basename $@)).o[ \t]*:/,"$(OBJDIR)$(notdir $(basename $@)).o $(OBJDIR)$(notdir $@):"); print;}> _dep.awk
	@$(CXX) -c -MM $(CXXFLAGS) $< | $(GAWK) -f _dep.awk > $(call os_name,$@)
	@$(RM) _dep.awk
endif
endif

$(OBJDIR)/%.o: ./libpcre/%.c
	@echo compiling $<
	@$(MKDIR) -p $(@D)
	@$(CC) $(CPPFLAGS) -c -o $@ $<

$(DLLFULLNAME): $(OBJS)
	@echo linking $@
	@$(MKDIR) -p $(@D)
	@$(AR) rc $(DLLNAME) $(OBJS)
	@$(RANLIB) $(DLLNAME)
	@$(MV) $(DLLNAME) $(OBJDIR)

-include $(DEPS)
