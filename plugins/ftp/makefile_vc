!ifdef __MAKE__
.PHONY: $(FLLLIST)
!else
FICTIVE=_fictive_
_fictive_:
!endif

!ifdef __MAKE__
_MKOPT=-s
!else
_MKOPT=/nologo
!endif

$(FLLLIST): $(FICTIVE)
!ifndef INSTALL
	$(MAKE) $(_MKOPT) /f makefile_vc_fll $(_MKDO_)FLL=$@ $(_MDEFS)
!else
	$(MAKE) $(_MKOPT) /f makefile_vc_fll $(_MKDO_)FLL=$@ $(_MDEFS) INSTALL=$(INSTALL)
!endif

