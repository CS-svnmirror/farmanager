##########
.PHONY: libdir
libdir:
	@if not exist "$(OBJLIB)\$(NULL)" mkdir "$(OBJLIB)"

$(FSTDLIB): $(LIB_OBJS)
!ifndef __MAKE__
	@$(LIBR) /OUT:$@ @<<
$(LIB_OBJS)
<<
!else
	@$(LIBR) /OUT:$@ @&&<
$(LIB_OBJS)
<
!endif

!ifndef __MAKE__
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj::
	$(CC) @<<
	$(CFLAGS_NO) /Fo$(OBJLIB)\ $<
<<
!else
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj:
	@$(CC) $(CFLAGS_NO) /Fo$(OBJLIB)\ { $< } 
!endif

$(RES): version.hpp

##########
flls: $(FLLLIST)

