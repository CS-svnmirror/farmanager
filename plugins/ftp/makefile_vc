libnode: $(FSTDLIB)

##########
$(OBJLIB): $(OBJDIR)
	@if not exist "$(OBJLIB)\$(NULL)" mkdir "$(OBJLIB)"

$(FSTDLIB): $(OBJLIB) $(LIB_OBJS)
!ifndef __MAKE__
	@$(LIBR) /OUT:$@ @<<
$(LIB_OBJS)
<<
!else
	@$(LIBR) /OUT:$@ @&&<
$(LIB_OBJS)
<
!endif

!ifndef __MAKE__
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj::
	$(CC) @<<
	$(CFLAGS) /Fo$(OBJLIB)\ $<
<<
!else
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj:
	@$(CC) $(CFLAGS) /Fo$(OBJLIB)\ { $< } 
!endif

##########
!ifndef __MAKE__
.SUFFIXES: .txt
!endif
{.\}.txt{$(OUTDIR)}.txt:
	@copy /Y $< $@ >NUL

$(DLLFULLNAME) : $(OUTTXT)
