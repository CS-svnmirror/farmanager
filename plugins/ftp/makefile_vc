##########
.PHONY: libdir
libdir:
	@if not exist "$(OBJLIB)\$(NULL)" mkdir "$(OBJLIB)"

$(FSTDLIB): $(LIB_OBJS)
!ifndef __MAKE__
	@$(LIBR) /OUT:$@ @<<
$(LIB_OBJS)
<<
!else
	@$(LIBR) /OUT:$@ @&&<
$(LIB_OBJS)
<
!endif

!ifndef __MAKE__
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj::
	$(CC) @<<
	$(CFLAGS_NO) /Fo$(OBJLIB)\ $<
<<
!else
{$(LIBSRC)}.cpp{$(OBJLIB)}.obj:
	@$(CC) $(CFLAGS_NO) /Fo$(OBJLIB)\ { $< } 
!endif

{$(LIBSRC)}.asm{$(OBJLIB)}.obj:
	ml /nologo /c /Fo$@ $<

$(RES): version.hpp

##########
flls: $(FLLLIST)

!include ../makefile_vc_getmode

!ifdef __MAKE__
.PHONY: $(FLLLIST)
!else
FICTIVE=_fictive_
_fictive_:
!endif

!ifdef __MAKE__
_MKOPT=-s
!else
_MKOPT=/nologo
!endif

$(FLLLIST): $(FICTIVE)
!ifndef INSTALL
	@$(MAKE) $(_MKOPT) /f makefile_vc_fll $(_MKDO_)FLL=$@ $(_MDEFS)
!else
	@$(MAKE) $(_MKOPT) /f makefile_vc_fll $(_MKDO_)FLL=$@ $(_MDEFS) INSTALL=$(INSTALL)
!endif

