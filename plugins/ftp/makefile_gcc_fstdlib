USERCPP = -I ./FStdLib -D__NOMEM__=1 -D__HEAP_MEMORY__=1 -D__USEASSERT__=1 -D__NOVCL__=1 -D_CONSOLE=1 -Wno-unknown-pragmas -Wno-switch -Wno-missing-braces -Wno-parentheses

include ../makefile_gcc_def_inc

DLLNAME = libFARStd.a
DLLFULLNAME = $(OBJDIR)/$(DLLNAME)

SRCS = fstd_Arg.cpp fstd_asrt.cpp fstd_cDialog.cpp fstd_CharDraw.cpp fstd_ClpS.cpp fstd_Con.cpp \
       fstd_crc32.cpp fstd_Dbg.cpp fstd_Dialog.cpp fstd_Dlg.cpp fstd_Editor.cpp fstd_err.cpp fstd_exit.cpp \
       fstd_exSCAT.cpp fstd_exSCHC.cpp fstd_exSCMP.cpp fstd_exSCPY.cpp fstd_exSNCH.cpp fstd_exSPCH.cpp \
       fstd_exSPS.cpp fstd_FMsg.cpp fstd_FUtils.cpp fstd_HotKey.cpp fstd_ilist.cpp fstd_INProc.cpp fstd_log.cpp \
       fstd_memh.cpp fstd_mems.cpp fstd_menu.cpp fstd_mesg.cpp fstd_mklog.cpp fstd_Msg.cpp fstd_Multiline.cpp \
       fstd_OEM.cpp fstd_Patt.cpp fstd_per.cpp fstd_plg.cpp fstd_RegCh.cpp fstd_RegCp.cpp fstd_RegCr.cpp fstd_RegDl.cpp \
       fstd_RegDla.cpp fstd_RegGB.cpp fstd_RegGI.cpp fstd_RegOp.cpp fstd_RegRn.cpp fstd_RegSB.cpp fstd_RegSC.cpp fstd_RegSI.cpp \
       fstd_SCol.cpp fstd_scr.cpp fstd_stdlibCS.cpp fstd_stdlibSP.cpp fstd_stdlibST.cpp fstd_SText.cpp \
       fstd_String.cpp fstd_Utils.cpp

OBJS = $(patsubst %.cpp,$(OBJDIR)/%.o,$(filter %.cpp,$(SRCS)))
DEPS = $(patsubst %.cpp,$(OBJDIR)/%.d,$(filter %.cpp,$(SRCS)))

all: $(DLLFULLNAME)

$(OBJDIR)/%.d: ./FStdLib/FARStdlib/%.cpp
	@echo making depends for $<
	@$(MKDIR) -p $(@D)
	@$(SHELL) -ec '$(CXX) -c -MM $(CXXFLAGS) $< \
                | sed '\''s/\($*\)\.o[ :]*/$(REOBJDIR)\1.o $(REOBJDIR)\1.d: /g'\'' > $@; [ -s $@ ] || $(RM) $@'

$(OBJDIR)/%.o: ./FStdLib/FARStdlib/%.cpp
	@echo compiling $<
	@$(MKDIR) -p $(@D)
	@$(CXX) $(CXXFLAGS) -c -o $@ $<

$(DLLFULLNAME): $(OBJS)
	@echo linking $@
	@$(MKDIR) -p $(@D)
	@$(AR) rc $(DLLNAME) $(OBJS)
	@$(RANLIB) $(DLLNAME)
	@$(MV) $(DLLNAME) $(OBJDIR)

-include $(DEPS)
