!if !defined(USE_VC9) && !defined(USE_VC8_32)
!if "$(_NMAKE_VER)">"9"
USE_VC9=1
!elseif "$(_NMAKE_VER)">"8"
USE_VC8_32=1
!endif
!endif

!ifndef USE_VC9
COMPAT64=/Wp64
NOWIN98=/OPT:NOWIN98
!else
!undef USE_VC8_32
USE_VC8_32=1
!endif

!ifndef USE_VC8_32
CPP_ADD_32=/Gi
!else
CPP_ADD_32=/GS- /GR-
!endif

LINK32_LIBS=kernel32.lib user32.lib winspool.lib advapi32.lib shell32.lib mpr.lib

RSC_PROJ=/l 0x409 /fo"$(RES_FILE)" /d $(USEDEBUG)

ULINK_MODES=-q -m- -ap -Gz -O- -o- -Gh -Gh-

DEFINES=\
	/D "UNICODE"\
	/D "_UNICODE"\
	/D $(USEDEBUG)\
!ifdef DEBUG
	/D "FAR_ALPHA_VERSION"\
	/D "SYSLOG_FARSYSLOG"\
	/D "SYSLOG"\
!endif
	/D "WIN32"\
	/D "_CONSOLE"\
	/D "_CRT_SECURE_NO_DEPRECATE"\
	/D "_CRT_NONSTDC_NO_DEPRECATE"\
	/D "_CRT_NON_CONFORMING_SWPRINTFS"

CPP_PROJ_COMMON=$(MP) $(COMPAT64) /W3 /nologo $(FARSYSLOG) /EHs-c- $(DEFINES) /Gy /GF /Fo"$(INTDIR)\\" /Fd"$(INTDIR)\\" /J /c /FAcs /Fa"$(CODDIR)\\"
CPP_PROJ_RELEASE=/MT /O2
CPP_PROJ_DEBUG=/MTd /Od /Zi

LINK_COMMON=$(LINK32_LIBS) /OPT:REF /OPT:ICF $(NOWIN98) /nologo /subsystem:console /def:"$(DEF_FILE)" /out:"$(OUTDIR)\Far.exe" /map:"$(OUTDIR)\far.map" /pdb:"$(OUTDIR)\far.pdb" /release

!if "$(OUTDIR)" == "Release.32.vc"

USEDEBUG=NDEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_RELEASE) $(CPP_ADD_32) /Zp4
LINK32_FLAGS=$(LINK_COMMON) /incremental:no /machine:i386

!elseif "$(OUTDIR)" == "Release.64.vc"

USEDEBUG=NDEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_RELEASE) /GS- /GR- /Zp8
LINK32_FLAGS=$(LINK_COMMON) /incremental:no /machine:amd64
ULINK_FLAGS=-Tpe+

!elseif "$(OUTDIR)" == "Release.IA64.vc"

USEDEBUG=NDEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_RELEASE) /GS- /GR- /Zp8
LINK32_FLAGS=$(LINK_COMMON) /incremental:no /machine:IA64

!elseif "$(OUTDIR)" == "Debug.64.vc"

USEDEBUG=_DEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_DEBUG) /GS- /GR-
LINK32_FLAGS=$(LINK_COMMON) /debug /machine:amd64
ULINK_FLAGS=-Tpe+ -v

!elseif "$(OUTDIR)" == "Debug.IA64.vc"

USEDEBUG=_DEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_DEBUG) /GS- /GR-
LINK32_FLAGS=$(LINK_COMMON) /debug /machine:IA64

!else

USEDEBUG=_DEBUG

CPP_PROJ=$(CPP_PROJ_COMMON) $(CPP_PROJ_DEBUG) $(CPP_ADD_32)
LINK32_FLAGS=$(LINK_COMMON) /debug /machine:I386
ULINK_FLAGS=-v

!endif

ALL: AllDirs lng depfile
	@$(MAKE) /f makefile_vc build USEDEPS=1

.PHONY: lng
lng:
	@echo generating language files
	@tools\lng.generator.exe -nc -i lang.ini farlang.templ
	@copy ".\FarEng.lng" "$(OUTDIR)\FarEng.lng" >nul
	@copy ".\FarRus.lng" "$(OUTDIR)\FarRus.lng" >nul

.PHONY: depfile
depfile:
	@tools\gawk -f .\scripts\mkdep.awk mkdep.list > $(DEPFILE)

.PHONY: build
build: "$(OUTDIR)\Far.exe" "$(OUTDIR)\FarEng.hlf" "$(OUTDIR)\FarRus.hlf" "$(OUTDIR)\File_id.diz" "$(FARINCLUDE)\plugin.pas" "$(FARINCLUDE)\farcolor.pas" "$(FARINCLUDE)\farkeys.pas" "$(FARINCLUDE)\farcolor.hpp" "$(FARINCLUDE)\farkeys.hpp" "$(FARINCLUDE)\plugin.hpp"

.PHONY: AllDirs
AllDirs:
	@if not exist "$(OUTDIR)\$(NULL)" mkdir "$(OUTDIR)"
	@if not exist "$(FARINCLUDE)\$(NULL)" mkdir "$(FARINCLUDE)"
	@if not exist "$(INTDIR)\$(NULL)" mkdir "$(INTDIR)"
	@if not exist "$(CODDIR)\$(NULL)" mkdir "$(CODDIR)"

"$(OUTDIR)\Far.exe": $(DEF_FILE) $(PCH_FILES) $(LINK32_OBJS) $(RES_FILE) Far.exe.manifest far.rc copyright.inc farversion.inc
	@echo linking $@
!ifndef LINK_ULINK
	@$(LINK32) @<<
	$(LINK32_FLAGS) $(LINK32_OBJS) $(RES_FILE)
<<
!else
        @$(ULINK) +- @+<<
        $(ULINK_MODES) $(ULINK_FLAGS) $(LINK32_OBJS)
        ,"$(OUTDIR)\Far.exe","$(OUTDIR)\Far.map"
        ,$(LINK32_LIBS)
        ,"$(DEF_FILE)","$(RES_FILE)"
<<
!endif

"$(INTDIR)\headers.c.pch": headers.c.c
	@echo making precompiled headers for C
	@$(CPP) $(CPP_PROJ) headers.c.c /Yc /Fp"$(INTDIR)\headers.c.pch"

"$(INTDIR)\headers.cpp.pch": headers.cpp.cpp
	@echo making precompiled headers for C++
	@$(CPP) $(CPP_PROJ) headers.cpp.cpp /Yc /Fp"$(INTDIR)\headers.cpp.pch"

.c{$(INTDIR)}.obj::
	@$(CPP) @<<
	$(CPP_PROJ) /Yuheaders.hpp /Fp"$(INTDIR)\headers.c.pch" $<
<<

.cpp{$(INTDIR)}.obj::
	@$(CPP) @<<
	$(CPP_PROJ) /Yuheaders.hpp /Fp"$(INTDIR)\headers.cpp.pch" $<
<<


.asm{$(INTDIR)}.obj:
!if $(_BUILD64)
	@$(ML) /c /Fo$@ $<
!else
	@$(ML) /c /coff /Fo$@ $<
!endif

$(RES_FILE): far.rc
	@echo compiling resource file
	@$(RSC) $(RSC_PROJ) far.rc

!ifdef USEDEPS
!include "$(DEPFILE)"
!endif

copyright.inc: copyright.inc.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P copyright.inc.m4 | tools\gawk -f .\scripts\enc.awk > copyright.inc

farversion.inc: farversion.inc.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P farversion.inc.m4 > farversion.inc

Far.exe.manifest: Far.exe.manifest.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P Far.exe.manifest.m4 > Far.exe.manifest

far.rc: far.rc.m4 farversion.m4 vbuild.m4 Far.exe.manifest res.hpp
	@echo generating $@
	@tools\m4 -P far.rc.m4 > far.rc

$(FARINCLUDE)\farcolor.hpp: colors.hpp farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=colors.hpp headers.m4 > "$(FARINCLUDE)\farcolor.hpp"

$(FARINCLUDE)\farkeys.hpp: keys.hpp farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=keys.hpp headers.m4   > "$(FARINCLUDE)\farkeys.hpp"

$(FARINCLUDE)\plugin.hpp: plugin.hpp farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=plugin.hpp headers.m4 > "$(FARINCLUDE)\plugin.hpp"

"$(OUTDIR)\FarEng.hlf": FarEng.hlf.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\gawk -f .\scripts\mkhlf.awk FarEng.hlf.m4 | tools\m4 -P > "$(OUTDIR)\FarEng.hlf"

"$(OUTDIR)\FarRus.hlf": FarRus.hlf.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\gawk -f .\scripts\mkhlf.awk FarRus.hlf.m4 | tools\m4 -P > "$(OUTDIR)\FarRus.hlf"

"$(OUTDIR)\File_id.diz": File_id.diz.m4 farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P File_id.diz.m4 > "$(OUTDIR)\File_id.diz"

"$(FARINCLUDE)\plugin.pas": plugin.pas farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=plugin.pas headers.m4 > "$(FARINCLUDE)\plugin.pas"

"$(FARINCLUDE)\farcolor.pas": farcolor.pas farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=farcolor.pas headers.m4 > "$(FARINCLUDE)\farcolor.pas"

"$(FARINCLUDE)\farkeys.pas": farkeys.pas farversion.m4 vbuild.m4
	@echo generating $@
	@tools\m4 -P -DINPUT=farkeys.pas headers.m4 > "$(FARINCLUDE)\farkeys.pas"


.PHONY: CLEAN
CLEAN:
	@echo cleaning
	-@del /q /f "$(INTDIR)\*.*"          > nul
	-@del /q /f "$(CODDIR)\*.*"          > nul
	-@del /q /f "lang.ini"               > nul
	-@del /q /f "lang.hpp"               > nul
	-@del /q /f "FarEng.lng"             > nul
	-@del /q /f "FarRus.lng"             > nul
	-@del /q /f "copyright.inc"          > nul
	-@del /q /f "farversion.inc"         > nul
	-@del /q /f "far.rc"                 > nul
	-@del /q /f "Far.exe.manifest"       > nul
	-@del /q /f "$(DEPFILE)"             > nul
	-@del /q /f "$(OUTDIR)\Far.exe"      > nul
	-@del /q /f "$(OUTDIR)\Far.exp"      > nul
	-@del /q /f "$(OUTDIR)\Far.lib"      > nul
	-@del /q /f "$(OUTDIR)\Far.map"      > nul
	-@del /q /f "$(OUTDIR)\FarEng.hlf"   > nul
	-@del /q /f "$(OUTDIR)\FarEng.lng"   > nul
	-@del /q /f "$(OUTDIR)\FarRus.hlf"   > nul
	-@del /q /f "$(OUTDIR)\FarRus.lng"   > nul
	-@del /q /f "$(OUTDIR)\File_id.diz"  > nul
